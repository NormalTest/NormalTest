            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>7.1.6.v20100715</version>
                <configuration>
                    <stopKey>stop</stopKey>
                    <stopPort>123</stopPort>
                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <webAppXml>
                    </webAppXml>
                    <webAppConfig>
                        <contextPath>/test</contextPath>
                    </webAppConfig>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <version>1.4.9</version>
                <configuration>
                    <container>
                        <containerId>tomcat6x</containerId>
                        <home>D:\Files\apache-tomcat-6.0.39</home>
                    </container>
                    <configuration>
                        <type>standalone</type>
                        <home>${project.build.directory}/tomcat6x</home>
                    </configuration>
                </configuration>

            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <repository>
            <id>localNexusReleases</id>
            <name>local nexus</name>
            <url>http://localhost:9876/nexus/content/repositories/releases/</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <id>localNexusSnapshots</id>
            <name>local nexus snapshot</name>
            <url>http://localhost:9876/nexus/content/repositories/snapshots/</url>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>
